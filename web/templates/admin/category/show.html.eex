<h2>Show category</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= translate(@category, :name) %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= translate(@category, :description) %>
  </li>

  <li>
    <strong>Image:</strong>
    <%= if @category.image do %>
      <img src="<%= CategoryImageUploader.url({@category.image, @category}, :medium) %>" alt="" />
    <% end %>
  </li>

  <li>
    <strong>Status:</strong>
    <%= Status.get(@category.status).text %>
  </li>

</ul>

<%= link "Edit", to: admin_category_path(@conn, :edit, @conn.assigns.locale, @category) %>
<%= link "Back", to: admin_category_path(@conn, :index, @conn.assigns.locale) %>
